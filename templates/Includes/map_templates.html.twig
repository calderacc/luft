{% verbatim %}
<script id="map-station-modal" type="text/x-handlebars-template">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
        Messwerte
    </a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
        Details
    </a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <table class="table table-striped table-bordered table-condensed">
    {{#each this}}
    <tr class="{{#ifEquals pollution_level "1"}}bg-success{{/ifEquals}}{{#ifEquals pollution_level "2"}}bg-warning{{/ifEquals}}{{#ifEquals pollution_level "3"}}bg-danger{{/ifEquals}}">
        <td>{{measurement.name}} ({{{measurement.short_name_html}}})</td>
        <td>{{data.value}} {{{measurement.unit_html}}}<br /><small>{{dateFormat data.date_time "DD.MM.YYYY, hh:mm"}}</small></td>
    </tr>
    {{/each}}
    </table>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
</div>


</script>
{% endverbatim %}
