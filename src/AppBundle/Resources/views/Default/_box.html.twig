{% if box %}
<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
    <div class="card card-inverse card-danger text-center">
        <div class="card-block text-xs-center">
            <h4 class="card-title">
                {{ box.data.value }} {{ box.pollutant.unit|raw }}
            </h4>
            <p class="card-text">{{ box.pollutant.name }}</p>
            <p class="card-text">{{ box.station.title }}</p>
        </div>
    </div>
</div>
{% endif %}
