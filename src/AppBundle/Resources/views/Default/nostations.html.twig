{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-info">
                Leider sind in deinem näheren Umfeld keine Messstationen zur Luftqualität im Betrieb. Du kannst aber aus der folgenden Liste Stationen in deiner Region einsehen.
            </div>
        </div>
    </div>

    {% for station in stationList %}
    <div class="row">
        <div class="col-xs-12">
            {% include 'AppBundle:Default:_station.html.twig' with { 'station': station, linkToStation: true } %}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}

{% block scripts %}
    <script src="/bundles/app/js/leaflet/leaflet.js"></script>
    <script src="/bundles/app/js/map.js"></script>
{% endblock %}
