<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="true">
            <bind key="$twitterClientId">%twitter.client_id%</bind>
            <bind key="$twitterClientSecret">%twitter.client_secret%</bind>
        </defaults>

        <service id="AppBundle\Twitter\MessageFactory\PlainMessageFactory" />
        <service id="AppBundle\Twitter\MessageFactory\EmojiMessageFactory" />

        <service id="AppBundle\Twitter\MessageFactory\MessageFactoryInterface" alias="AppBundle\Twitter\MessageFactory\EmojiMessageFactory" />

        <service id="AppBundle\Twitter\Twitter" />

        <service id="AppBundle\UserProvider\LuftUserProvider" />
    </services>
</container>
