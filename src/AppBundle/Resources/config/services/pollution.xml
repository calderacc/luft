<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="true" />

        <service id="AppBundle\SourceFetcher\Persister\Persister" />

        <service id="AppBundle\Pollution\PollutionDataFactory\PollutionDataFactory" />

        <service id="AppBundle\Pollution\StationFinder\ElasticStationFinder">
            <argument type="service" id="fos_elastica.finder.air_station.station" />
        </service>
        <service id="AppBundle\Pollution\StationFinder\StationFinderInterface" alias="AppBundle\Pollution\StationFinder\ElasticStationFinder" />

        <service id="AppBundle\Pollution\BoxDecorator\BoxDecorator" />
        <service id="AppBundle\Pollution\StationFinder\BoxDecoratorInterface" alias="AppBundle\Pollution\BoxDecorator\BoxDecorator" />

        <service id="AppBundle\Pollution\DataRetriever\DoctrineOrmDataRetriever" />
        <service id="AppBundle\Pollution\DataRetriever\ElasticDataRetriever">
            <argument type="service" id="fos_elastica.finder.air_data.data" />
        </service>
        <service id="AppBundle\Pollution\DataRetriever\DataRetrieverInterface" alias="AppBundle\Pollution\DataRetriever\ElasticDataRetriever" />
    </services>
</container>
