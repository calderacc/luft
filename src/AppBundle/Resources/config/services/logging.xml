<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Gelf\Transport\UdpTransport">
            <argument type="string">%graylog.hostname%</argument>
            <argument type="string">%graylog.port%</argument>
        </service>

        <service id="Gelf\Publisher">
            <call method="addTransport">
                <argument type="service" id="Gelf\Transport\UdpTransport" />
            </call>
        </service>

        <service id="Monolog\Handler\GelfHandler">
            <argument type="service" id="Gelf\Publisher" />
            <argument type="string">error</argument>
        </service>
    </services>
</container>